
QPushButton[class="login-btn"] {{
    background-color: rgb(214, 47, 47);
    padding: 10px;
    width: 300px;
    border: 3px solid rgb(138, 0, 0);
    border-radius: 15px;
    font-size: 16px;
    font-weight: bold;
    color: white;
}}

QPushButton[class="login-btn"]:hover {{
    border: 3px solid white;
}}

QPushButton[class="signup-btn"] {{
    background-color: rgb(60, 125, 158);
    padding: 10px;
    width: 300px;
    border: 3px solid rgb(38, 84, 124);
    border-radius: 15px;
    font-size: 16px;
    font-weight: bold;
    color: white;
}}

QPushButton.signup-btn:hover {{
    border: 3px solid rgb(244, 47, 47);
}}

QLineEdit {{
    border-radius: 5px;
    border: 1px solid black;
    padding: 5px;
}}

QTextEdit {{
    border-radius: 5px;
    border: 1px solid black;
    padding: 5px;
}}

QLabel.login-label {{
    font-weight: bold;
}}

.bold-label {{
    font-weight: bold;
    font-size: 20px;
}}

.tab-info {{
    font-size: 20px;
}}

QPushButton {{
    outline: 0;
}}

.confirm-btn {{
    background-color: rgb(230, 242, 230);
    border: 1px solid green;
    color: green;
    font-size: 13px;
    padding: 7px;
    border-radius: 5px;
}}

.confirm-btn:hover {{
    border: 2px solid green;
}}

.cancel-btn {{
    background-color: rgb(242, 230, 230);
    border: 1px solid red;
    color: red;
    font-size: 13px;
    padding: 7px;
    border-radius: 5px;
}}

.cancel-btn:hover {{
    border: 2px solid red;
}}

QPushButton[class="normal-bar-btn"] {{
    background-color: rgb(60, 125, 158);
    padding: 10px;
    max-width: 150px;
    border: 3px solid rgb(38, 84, 124);
    border-radius: 15px;
    font-size: 14px;
    font-weight: bold;
    color: white;
}}

QPushButton.normal-bar-btn:hover {{
    border: 3px solid rgb(244, 47, 47);
}}

QPushButton[class="special-bar-btn"] {{
    background-color: rgb(214, 47, 47);
    padding: 10px;
    max-width: 150px;
    border: 3px solid rgb(138, 0, 0);
    border-radius: 15px;
    font-size: 14px;
    font-weight: bold;
    color: white;
}}

QPushButton.special-bar-btn:hover {{
    border: 3px solid white;
}}


